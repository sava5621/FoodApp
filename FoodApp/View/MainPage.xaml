<?xml version="1.0" encoding="utf-8" ?>
<Shell  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="FoodApp.MainPage"
        xmlns:view="clr-namespace:FoodApp.View"
        xmlns:viewmodel ="clr-namespace:FoodApp.ViewModel">
    <Shell.Shadow>
        <Shadow Brush="Black"
                Offset="0,0"
                Radius="10"
                Opacity="0.2" />
    </Shell.Shadow>
    <TabBar>

        <Tab Route="home"
             Icon="home_screen.svg">
            <ShellContent ContentTemplate="{DataTemplate  view:HardHome}"/>
        </Tab>
        <Tab Route="booking"
             Icon="booking_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate  view:Booking}"/>
        </Tab>
        <Tab Route="account"
             Icon="account_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate  view:Account}"/>
        </Tab>
    </TabBar>
</Shell>
        
    

